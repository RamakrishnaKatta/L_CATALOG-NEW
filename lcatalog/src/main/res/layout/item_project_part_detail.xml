<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_3"
    android:background="@drawable/background_curves"
    app:cardBackgroundColor="@color/complete_transparent"
    app:cardCornerRadius="@dimen/margin_3">


    <RelativeLayout
        android:id="@+id/part_article_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/part_item_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/part_article_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_100"
                android:adjustViewBounds="true"
                android:contentDescription="@string/company_icon"
                android:scaleType="fitCenter"
                android:src="@drawable/dummy_icon" />

        </LinearLayout>

        <TextView
            android:id="@+id/part_article_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/margin_3"
            android:text="@string/catalog_title"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>