<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Feedbacklayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FeedbackActivity"
    tools:showIn="@layout/activity_feedback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_150">

            <!-- Name Label -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/area_input_feed_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:visibility="visible">

                <EditText
                    android:id="@+id/input_feed_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:hint="@string/name"
                    android:inputType="textPersonName"
                    android:maxLength="50" />

            </android.support.design.widget.TextInputLayout>

            <!-- Number Label -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/area_input_feed_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:visibility="visible">

                <EditText
                    android:id="@+id/input_feed_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:hint="@string/mobile_number"
                    android:inputType="number"
                    android:maxLength="10" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_40"
                android:orientation="vertical">

                <!--Feedback Label-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/area_input_feed_subject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_60"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/input_feed_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:background="@drawable/shape"
                        android:gravity="top|start"
                        android:hint="@string/FeedBack_Subject"
                        android:inputType="textMultiLine"
                        android:lines="10"
                        android:maxLines="15"
                        android:paddingBottom="@dimen/margin_10"
                        android:scrollbars="vertical" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_feed_submit"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_20"
                android:paddingTop="@dimen/margin_20"
                android:text="@string/feedback_submit"
                android:textSize="@dimen/text_tab_small" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>