<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_6"
    android:background="@drawable/background_curves"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/v_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/notify_image"
            android:layout_width="@dimen/margin_200"
            android:layout_height="@dimen/margin_200"
            android:contentDescription="@string/app_name"
            android:paddingEnd="@dimen/margin_0"
            android:paddingStart="@dimen/margin_10" />

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/notify_image"
            android:fontFamily="@font/overlock_sc"
            android:paddingEnd="@dimen/margin_0"
            android:paddingStart="@dimen/margin_40"
            android:paddingTop="@dimen/margin_40"
            android:text="@string/notifications_title"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/text_tab_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notification_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_title"
            android:layout_toEndOf="@+id/notify_image"
            android:fontFamily="@font/assistant_semibold"
            android:maxLines="3"
            android:paddingEnd="@dimen/margin_0"
            android:paddingStart="@dimen/margin_40"
            android:text="@string/notifications_subject"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/text_tab_medium"
            android:textStyle="italic|bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>