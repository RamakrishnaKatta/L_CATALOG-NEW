<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_3"
    app:cardBackgroundColor="@color/complete_transparent"
    app:cardCornerRadius="@dimen/margin_3">

    <RelativeLayout
        android:id="@+id/vendor_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/vendor_list_logo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vendor_list_logo"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/margin_200"
                android:adjustViewBounds="true"
                android:contentDescription="@string/company_icon"
                android:padding="@dimen/margin_20"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <TextView
            android:id="@+id/vendor_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vendor_list_logo_layout"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/margin_3"
            android:text="@string/catalog_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_tab_large"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
